{
  "name": "confyglot",
  "version": "0.1.0",
  "description": "Parse configuration files in toml, yaml, json, etc.",
  "main": "build",
  "scripts": {
    "clean": "rm -rf build",
    "build": "tsc -b",
    "watch": "tsc -b -w",
    "test": "jest",
    "verbose": "jest --verbose",
    "coverage": "jest --coverage",
    "docs": "npx typedoc src/index.ts --out docs",
    "release": "release-it"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cbush/confyglot.git"
  },
  "keywords": [
    "configuration",
    "config",
    "toml",
    "yaml",
    "json",
    "directory",
    "rc"
  ],
  "author": "Chris Bush",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/cbush/confyglot/issues"
  },
  "homepage": "https://github.com/cbush/confyglot#readme",
  "devDependencies": {
    "@babel/preset-typescript": "^7.12.17",
    "@types/ini": "^1.3.30",
    "@types/js-yaml": "^4.0.0",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-tsdoc": "^0.2.11",
    "jest": "^26.6.3",
    "memfs": "^3.2.0",
    "prettier": "^2.2.1",
    "release-it": "^14.4.1",
    "ts-jest": "^26.5.1",
    "typedoc": "^0.20.27",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "ajv": "^7.1.1",
    "ini": "^2.0.0",
    "js-yaml": "^4.0.0"
  }
}
